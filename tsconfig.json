{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
